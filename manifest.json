{
  "manifest_version": 3,
  "name": "Content Highlighter",
  "version": "1.2",
  "description": "Highlights specific elements containing more than 10 words with a red border.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
  }
}

